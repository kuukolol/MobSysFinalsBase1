@page "/favourites"

<div class="w-screen min-h-screen bg-white flex flex-col pb-16">
    <div class="px-4 pt-2 pb-1 bg-white z-10">
        <h1 class="text-2xl font-bold text-gray-800 mt-0 mb-2">Favourites</h1>
        <div class="flex items-center bg-gray-100 rounded-full px-4 py-2">
            <i class="fas fa-search text-gray-400 mr-2"></i>
            <input class="flex-1 bg-transparent outline-none text-sm"
                   placeholder="Search contacts"
                   type="text"
                   disabled />
            <i class="fas fa-ellipsis-v text-gray-400 ml-2"></i>
        </div>
    </div>

    <div class="flex items-center justify-between px-4 pt-2 pb-1">
        <span class="text-sm font-semibold text-gray-700">Favourites</span>
        <button class="text-blue-600 text-sm font-semibold focus:outline-none">Add</button>
    </div>
    <div class="px-4 pt-2">
    </div>
</div>
